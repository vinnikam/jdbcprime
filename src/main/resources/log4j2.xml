<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd/MM/yy HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
    </Console>
    <File name="log" fileName="D:/apl/universidad/jdbcprime/jdbcprime.log" append="true">
      <PatternLayout pattern="%d{dd/MM/yy HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="log" level="trace"/>
      <AppenderRef ref="Console" level="trace"/>
    </Root>
  </Loggers>
</Configuration>
